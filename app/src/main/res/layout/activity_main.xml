<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:layout_gravity="center">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:text="Danh Sách Nhóm Tham Gia:"/>
    <ListView
        android:id="@+id/listviewNhom"
        android:layout_below="@id/title"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp" />

    <EditText
        android:id="@+id/textTenNhom"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/listviewNhom"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="20dp"
        android:hint="Nhập tên Nhóm" />
    <EditText
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textTenNhom"
        android:layout_marginHorizontal="15dp"
        android:id="@+id/textMoTa"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:hint="Nhập Mô Tả"
        />
    <Button
        android:id="@+id/buttonThem"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textMoTa"
        android:layout_width="200dp"
        android:layout_margin="15dp"
        android:backgroundTint="#E11414"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Thêm Nhóm"/>





</RelativeLayout>