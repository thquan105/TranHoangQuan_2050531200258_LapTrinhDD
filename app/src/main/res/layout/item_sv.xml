<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:id="@+id/card_sv_258"
    android:padding="10dp"
    app:cardElevation="8dp"
    android:layout_margin="7dp"
    app:cardBackgroundColor="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp">
        <TextView
            android:id="@+id/tenSV_258"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên SV"
            android:paddingStart="20dp"
            android:textColor="#000000"
            android:textSize="20sp"/>
        <LinearLayout
            android:id="@+id/b_258"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tenSV_258">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:text="MSV: "
                android:textColor="#505050"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/maSV_258"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:text="maSV"
                android:textColor="#505050"
                android:textSize="15sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/b_258">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:text="Năm Sinh:"
                android:textColor="#101010"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/namsinh_258"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:text="2002"
                android:textColor="#101010"
                android:textSize="15sp" />
        </LinearLayout>
        <Button
            android:id="@+id/btnDel"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_del"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>