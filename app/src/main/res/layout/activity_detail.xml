<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">
    <LinearLayout
        android:id="@+id/txtTit_258"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="center_vertical"
        android:background="#E8333333">
        <ImageView
            android:id="@+id/btn_Back_258"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            android:layout_marginStart="15dp"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:text="THÔNG TIN"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="31sp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/info_258"
        android:layout_below="@+id/txtTit_258"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="30dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_launcher_background"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Họ Tên: "
                android:textSize="20dp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/txtTen_258"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trần Hoàng Quân"
                android:textSize="20dp"
                android:textColor="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MSV: "
                android:textSize="20dp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/txtMsv_258"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2050531200258"
                android:textSize="20dp"
                android:textColor="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lớp: "
                android:textSize="20dp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/txtmalop_258"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20T2"
                android:textSize="20dp"
                android:textColor="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Năm sinh: "
                android:textSize="20dp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/txtNamsinh_258"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2002"
                android:textSize="20dp"
                android:textColor="@color/black"/>
        </LinearLayout>
    </LinearLayout>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_below="@+id/info_258"
            android:stretchColumns="*">
            <TableRow>
                <TextView
                    android:layout_span="2"
                    android:text="BẢNG ĐIỂM"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    android:background="#07756B"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:text="Toán"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/txtToan_258"
                    android:text="Điểm Toán"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:textColor="@color/black"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:text="Tin"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:background="#92EDE6"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/txtTin_258"
                    android:text="Điểm Tin"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:background="#92EDE6"
                    android:textColor="@color/black"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:text="Anh"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/txtAnh_258"
                    android:text="Điểm Anh"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:textColor="@color/black"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:text="Điểm Trung Bình"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:background="#07756B"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/txtDtb_258"
                    android:text="ĐTB"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:background="#07756B"
                    android:textColor="@color/white"/>
            </TableRow>
        </TableLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp">
        <Button
            android:id="@+id/btnEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_margin="5dp"
            android:backgroundTint="#5D94F3"
            android:textSize="15sp"
            android:text="Chỉnh sửa"/>
    </LinearLayout>


</RelativeLayout>