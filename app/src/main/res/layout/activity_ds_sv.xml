<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DsSvActivity"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/txtTit_258"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="center_vertical"
        android:background="#E8333333">
        <ImageView
            android:id="@+id/btnBack_258"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            android:layout_marginStart="15dp"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:text="SINH VIÊN"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="31sp"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/txtTit_258"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="5dp"
        android:background="#E6E6E6"
        android:id="@+id/rcv_sv_258"
        android:layout_marginBottom="90dp"/>

    <Button
        android:id="@+id/btn_themSV_258"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/quan_258"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="#E8333333"
        android:text="Thêm"
        android:textColor="@color/white"
        android:textSize="20dp" />
    <TextView
        android:id="@+id/quan_258"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:textSize="15dp"
        android:text="Trần Hoàng Quân - 2050531200258"/>
</RelativeLayout>